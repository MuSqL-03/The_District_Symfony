{# templates/categorie/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Les Catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Les Catégories</h1>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4">
                <div class="card">
                    <img src="{{ asset('Images/category/' ~ category.image) }}" class="card-img-top" alt="{{ category.libelle }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.libelle }}</h5>
                        <a href="{{ path('plat_by_category', {id: category.id}) }}" class="btn btn-primary">Voir les plats</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
