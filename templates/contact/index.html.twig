{% extends 'base.html.twig' %}



{% block stylesheets %}

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">    

    <!-- Custom Styles -->
   <style>
        /* Add some spacing between the form fields and the button */
        .form-group {
            margin-bottom: 20px;  /* Space between each form field and between the button and fields */
            font-size: 18px;
            font-weight: bold;
        }

        /* Style the button */
        .btn {
            background-color: #007bff; /* Example background color */
            color: white; /* Text color */
            padding: 10px 20px; /* Padding for the button */
            border: none; /* Remove border */
            border-radius: 4px; /* Rounded corners */
            width: 100%;  /* Make button take the full width, adjust as necessary */
        }

        .btn:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        /* Card background styling */
        .card-body {
            background-color: pink;
            padding: 20px;
            border-radius: 8px;
        }

        /* Container styling */
        .container {
            max-width: 600px; /* Limit width for larger screens */
            padding: 20px;
        }

        /* Adjust heading style */
        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }
    </style>
{% endblock %}

{% block body %}
    <hr>
<div class="container">
    <h1>Contectez-Nous</h1>
    <hr>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="form-group">
                {{ form_row(form.Nom, {'attr': {'class': 'form-control text-left'}})  }}
            </div>
            <div class="form-group">
                {{ form_row(form.Prenom, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.message, {'attr': {'class': 'form-control text-left'}})  }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn">Envoyer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
